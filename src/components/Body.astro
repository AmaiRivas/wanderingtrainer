---
import { signal } from '@preact/signals';
import FilterSelect from "./FilterSelect";

const synergyFilter = signal("test");
---

<main>
  <section class="main-section">
    <h1>Wandering Trainer</h1>
    <div class="main-filters">
      {Array.from({ length: 3 }).map((_, index) => (
        <div class="main-filter-item">
          <label for={`synergy-select-${index}`}>Choose a Synergy {index + 1}:</label>
          {/* <FilterSelect selectedValue={synergyFilter} client:visible></FilterSelect> */}
          <select id="synergy-select" name="synergy">
            <option value="">None</option>
            <option value="synergy1">Synergy 1</option>
            <option value="synergy2">Synergy 2</option>
            <option value="synergy3">Synergy 3</option>
          </select>
        </div>
      ))}
    </div>
    <div class="main-selectors"></div>
    <div class="main-compositions">
      <!-- <Compositions></Compositions> -->
    </div>
  </section>
</main>

<style>
  main {
    color: white;
  }

  .main-section {
    margin: 100px 250px;
  }

  .main-filters {
    display: flex;
    gap: 20px;
  }

  .main-filter-item {
    display: flex;
    flex-direction: column;
    gap: 2px;

    label {
      display: block;
      font-size: small;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: #e0e0e0;
    }

    select {
      width: 100%;
      padding: 0.5rem 1rem;
      font-size: 1rem;
      border-radius: 0.375rem;
      border: 1px solid #1b2b44;
      background-color: #1b2b44;
      color: #e0e0e0;
      appearance: none;
      -webkit-appearance: none;
      -moz-appearance: none;
      background-repeat: no-repeat;
      background-position: right 1rem center;
      background-size: 0.65rem;
    }

    option {
      background-color: #1b2b44;
      color: #e0e0e0;
      padding: 0.5rem;
    }

    select:hover, select:focus {
      border-color: #334f7a;
      outline: none;
    }

    option:hover, option:focus {
      background-color: #334f7a;
    }
  }
</style>
