---
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<title>{title}</title>
		<meta charset="UTF-8" />
		<meta name="description" content="This webpage is a tool for Teamfight Tactics (TFT) players to optimize synergy combinations using spatula items and wandering trainers for stronger team compositions." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	</head>
	<body>
		<Header></Header>
		<slot />
		<Footer></Footer>
	</body>
</html>

<style is:global>
	*,
    *::before,
    *::after {
      box-sizing: border-box;
    }
		
	:root {
		color-scheme: light dark;
	}

	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
		background-color: #0D202B;
	}

	body {
		color: rgba(17, 17, 17, 0.9);
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		overscroll-behavior: none;
		margin: 0;
	}
</style>
